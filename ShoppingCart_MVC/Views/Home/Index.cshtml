@model IEnumerable<ShoppingCart_MVC.Models.Item>

<div class="cart-container">
    <h1 class="my-4 text-center">Store</h1>

    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100">
                <img src="@item.ImageUrl" alt="@item.Name" class=" card-img-top product-image" />
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text text-success fw-bold">@item.Price.ToString("C")</p>
                    <form method="post" asp-action="AddToCart" asp-route-id="@item.Id">
                        <div class="mb-2">
                            <select name="quantity" class="form-select">
                                @for (int i = 1; i <= 10; i++)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-card-plus"></i> Add To Cart
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }

    <div class="text-end mt-4">
        <a asp-controller="Home" asp-action="ViewCart" class="btn btn-primary btn-lg">
            <i class="bi bi-cart"></i> View Cart
        </a>
    </div>
</div>